
#include <stdio.h>
#include <string.h>
#include <ctype.h>

int main() {
    
    char Name[50];
    char temp[100];

    printf("Enter your name: ");
    scanf("%s", Name);

    int len = strlen(Name);

 
    // 5) Имя наоборот
    printf("5) ");
    printf("Hello, ");
    for (int i = len - 1; i >= 0; i--) {
        printf("%c", Name[i]);
    }
    

    return 0;
} 
