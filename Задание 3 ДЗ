#include <stdio.h>
#include <string.h>

int main() {
    char s[1000];
    int count = 0;

    gets(s); 

    for (int i = strlen(s) / 2; s[i]; i++) {
        if (s[i] == '.' || s[i] == ',' || s[i] == '!' || s[i] == '?') {
            count++;
        }
    }

    printf("%d", count);
    return 0;
}
